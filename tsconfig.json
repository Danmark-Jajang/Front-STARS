{
  "compilerOptions": {
    "jsx": "react-jsx",
    "strict": true,
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["types/*"]
    },
    "lib": ["ES2020", "DOM"],
  },
  "include": [
    "src",
    "src/types/**/*"
  ]
}